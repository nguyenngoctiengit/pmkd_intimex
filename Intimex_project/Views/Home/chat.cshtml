
@{
    ViewData["Title"] = "chat";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .Message {
        width: 100%;
        height: 60px;
        border-radius: 30px;
    }

    .SendMessageButton {
        width: 100%;
        height: 35px;
        position: absolute;
        margin: auto;
    }

    .SendMessageDiv {
        align-items: center;
        display: flex;
    }

    .SendMessageDivLabel {
        align-items: center;
        display: flex;
        font-size: 20px;
    }
</style>
<div class="right_col" role="main" style="height:800px">
    <div class="">
        <div class="col-md-12 col-sm-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>CHAT:<small>@ViewBag.NormalizedUserName</small></h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="#">Settings 1</a>
                                <a class="dropdown-item" href="#">Settings 2</a>
                            </div>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br />
                    <form class="form-label-left input_mask" method="post" role="form">
                        <div class="form-group row">
                            <div class="col-md-10 col-sm-10">
                                <input type="text" id="senderInput" value="@ViewBag.sender" hidden />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-10 col-sm-10">
                                <input type="text" id="receiverInput" value="@ViewBag.userId" hidden />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-form-label col-md-1 col-sm-1 SendMessageDivLabel">Message: </label>
                            <div class="col-md-10 col-sm-10">
                                <input type="text" id="messageInput" class="Message" />
                            </div>
                            <div class="col-md-1 col-sm-1 SendMessageDiv">
                                <input type="button" id="sendButton" value="Send Message" class="SendMessageButton" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6 col-sm-6">
                                <ul id="messagesList"></ul>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>







