                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-form-label col-md-2 col-sm-2">Ref</label>
                            <input type="text" class="form-control col-md-2 col-sm-2 text-box-hdmb" asp-for="Ref" id="Ref" disabled>
                            <label class="col-form-label col-md-2 col-sm-2">Số hợp đồng</label>
                            <input type="text" class="form-control col-md-6 col-sm-6 text-box-hdmb" id="Sohd" asp-for="Sohd" disabled>
                        </div>
                        <div class="form-group row">
                            <label class="col-form-label col-md-2 col-sm-2">Tiền tệ</label>
                            @(Html.DevExtreme().SelectBoxFor(a => a.Tiente).DataSource(d => d.Mvc().Controller("Hopdong")
                                                                            .LoadAction("GetTienTe").LoadMode(DataSourceLoadMode.Raw))
                                                                        .DisplayExpr("Ma").ValueExpr("Ma").ElementAttr("class", "form-control col-md-2 col-sm-2 text-box-hdmb").OnValueChanged("Changed_TienTe").ID("Tiente").Disabled(true))
                            <input type="text" class="form-control col-md-8 col-sm-8 text-box-hdmb" id="Money" disabled>
                        </div>
                        <div class="form-group row">
                            <label class="col-form-label col-md-2 col-sm-2">Khách hàng</label>
                            <input type="text" class="form-control col-md-2 col-sm-2 text-box-hdmb" id="Makhach" asp-for="Makhach" disabled>
                            <input type="text" class="form-control col-md-5 col-sm-5 text-box-hdmb" id="Tenfull" asp-for="Tenfull" disabled>
                            <label class="col-form-label col-md-1 col-sm-1">V.chuyển</label>
                            <input type="text" class="form-control col-md-2 col-sm-2 text-box-hdmb" id="VanChuyen" asp-for="VanChuyen" disabled>
                        </div>
                        <div class="form-group row" style="display:none" id="hdmb_chomuon">
                            <label class="col-form-label col-md-2 col-sm-2">HĐ cho mượn</label>
                            <input type="text" class="form-control col-md-2 col-sm-2 text-box-hdmb" id="SoHdcmuon" asp-for="SoHdcmuon" disabled>
                            <input type="text" class="form-control col-md-8 col-sm-8 text-box-hdmb" id="HdcmuonId" asp-for="HdcmuonId" disabled>
                        </div>
                        <div class="form-group row">
                            <label class="col-form-label col-md-2 col-sm-2">INT Ký</label>
                            <input type="text" class="form-control col-md-2 col-sm-2 text-box-hdmb" id="IntKy" asp-for="IntKy" disabled>
                            <input type="text" class="form-control col-md-8 col-sm-8 text-box-hdmb" id="Name_IntKy" disabled>
                        </div>
                        <div class="form-group row">
                            <label class="col-form-label col-md-2 col-sm-2">Khách ký</label>
                            <input type="text" class="form-control col-md-2 col-sm-2 text-box-hdmb" id="ClientKy" asp-for="ClientKy" disabled>
                            <input type="text" class="form-control col-md-8 col-sm-8 text-box-hdmb" id="Name_ClientKy" disabled>
                        </div>
                        <div class="form-group row">
                            <label class="col-form-label col-md-2 col-sm-2">Thanh toán</label>
                            <input type="text" class="form-control col-md-2 col-sm-2 text-box-hdmb" id="Thanhtoan" asp-for="Thanhtoan" disabled>
                            <input type="text" class="form-control col-md-8 col-sm-8 text-box-hdmb" id="TenTT" disabled>
                        </div>
                        <div class="form-group row">
                            <label class="col-form-label col-md-2 col-sm-2">Địa điểm giao hàng</label>
                            <input type="text" class="form-control col-md-10 col-sm-10 text-box-hdmb" id="DiaDiemGiaoHang" asp-for="DiaDiemGiaoHang" disabled>
                        </div>
                        <div class="form-group row">
                            <label class="col-form-label col-md-1 col-sm-1">Mức ứng</label>
                            <input type="text" class="form-control col-md-2 col-sm-2 text-box-hdmb" id="Mucung" disabled>
                            <label class="col-form-label col-md-auto col-sm-auto">Tạm ứng theo HĐ(FOB)</label>
                            <input type="text" class="form-control col-md-3 col-sm-3 text-box-hdmb" id="TienUngHd" asp-for="TienUngHd" disabled>
                            <label class="col-form-label col-md-auto col-sm-auto">Tạm ứng thực tế</label>
                            <input type="text" class="form-control col-md-2 col-sm-2 text-box-hdmb" id="TienUngTt" asp-for="TienUngTt" disabled>
