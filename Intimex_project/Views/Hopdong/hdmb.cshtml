                            <input type="date" class="form-control text-box-hdmb col-md-2 col-sm-2" id="Ngayky" asp-for="Ngayky" disabled>
                            <label class="col-form-label col-md-1 col-sm-1" style="padding-left:0px;padding-right:0px">Ngày g.hàng</label>
                            <input type="date" class="form-control col-md-2 col-sm-2 text-box-hdmb" id="Ngaygiao" asp-for="Ngaygiao" disabled>
