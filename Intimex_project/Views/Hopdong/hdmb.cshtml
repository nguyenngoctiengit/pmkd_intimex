                                <input type="radio" style="display: inline-block; margin: 5px 10px 5px 10px " asp-for="MuaBan" id="CMUON" value="CMUON" name="MuaBan" disabled><label for="CMUON">Cho mượn</label>
                                <input type="radio" style="display: inline-block; margin: 5px 10px 5px 10px " asp-for="MuaBan" id="KTRA" value="KTRA" name="MuaBan" disabled><label for="KTRA">Khách trả</label>
