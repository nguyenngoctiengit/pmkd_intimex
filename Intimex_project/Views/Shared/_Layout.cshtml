    <script type="text/javascript">
        function SubmitValueBT() {
            var spreadsheetStateId = spreadsheet.getSpreadsheetState().SpreadsheetWorkSessionId;
            var spreadsheetStateID = spreadsheetStateId;
            var id = document.getElementById("idkcs").value;
            if (id == null || id == "") {
                alert("Vui lòng chọn xe");
            } else {
                $.ajax({
                    type: "post",
                    url: "/bangtinh/updatespreadsheet",
                    data: { spreadsheetStateID, id },
                    success: function (result) {
                        $("#spreadsheetBT").html(result);
                    }
                })
            }

        }
        function onCustomCommandExecuted(s, e) {
            switch (e.commandName) {
                case 'save':
                    var spreadsheetState = spreadsheet.getSpreadsheetState();
                    $.ajax({
                        type: 'POST',
                        url: '@Url.Action("SaveToBytes")',
                        data: { spreadsheetState: spreadsheetState }
                    });
                    alert("Save thành công");
                    break;
                case 'download':
                    var spreadsheetState = spreadsheet.getSpreadsheetState();
                    $("#formExport").attr('action', '@Url.Action("Download")');
                    $("input[name='SpreadsheetWorkSessionId']").val(spreadsheetState.SpreadsheetWorkSessionId);
                    $("#formExport").submit();
                    break;
            }
        }
        /// some script
        $(document).ready(function () {
            setInterval(function () {
                var dt = new Date();
                var month = dt.getMonth() + 1;
                $('#datetime_reload').html(dt.getDate() + "/" + month + "/" + dt.getFullYear() + " " + "  " + dt.getHours() + ":" + dt.getMinutes() + ":" + dt.getSeconds())
