@model Data.Models.Trading_system.Archive

<form method="post" asp-controller="Archives" asp-action="AddArchives">
    <div class="modal-body">
        <div class="form-group row">
            <div class="form-group col-md-6">
                @{
                    if (ViewBag.name == "Edit")
                    {
                        if (Model.ArchivesType == 0)
                        {
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="ArchivesType" asp-for="ArchivesType" value="0" checked>
                                <label class="form-check-label" for="inlineRadio1">Công việc</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="ArchivesType" asp-for="ArchivesType" value="1">
                                <label class="form-check-label" for="inlineRadio2">Hồ sơ</label>
                            </div>
                        }
                        else
                        {
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="ArchivesType" asp-for="ArchivesType" value="0">
                                <label class="form-check-label" for="inlineRadio1">Công việc</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="ArchivesType" asp-for="ArchivesType" value="1" checked>
                                <label class="form-check-label" for="inlineRadio2">Hồ sơ</label>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="ArchivesType" asp-for="ArchivesType" value="0" checked>
                            <label class="form-check-label" for="inlineRadio1">Công việc</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="ArchivesType" asp-for="ArchivesType" value="1">
                            <label class="form-check-label" for="inlineRadio2">Hồ sơ</label>
                        </div>
                    }
                }

            </div>
        </div>
        <div class="form-group row">
            <div class="form-group col-md-12">
                <label class="col-form-label col-md-2 col-sm-2">Tên</label>
                <div class="col-md-10 col-sm-10">
                    <input type="text" name="ArchivesName" asp-for="ArchivesName" class="form-control" required>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="form-group col-md-12">
                <label class="col-form-label col-md-2 col-sm-2">Trích yếu</label>
                <div class="col-md-10 col-sm-10">
                    <input type="text" name="Contents" asp-for="Contents" class="form-control" required>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        @{
            if (ViewBag.name == "Edit")
            {
                <button type="submit" asp-action="EditArchive1" asp-controller="Archives" asp-route-id="@ViewBag.id" class="btn btn-primary">Save</button>
            }
            else
            {
                <button type="submit" asp-action="AddArchives" asp-controller="Archives" class="btn btn-primary">Save</button>
            }
        }

    </div>
</form>