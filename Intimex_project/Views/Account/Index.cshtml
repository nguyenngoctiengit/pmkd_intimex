@using Data.Models.SignalR
@model AspNetUser
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Công ty Cổ phần tập đoàn Intimex</title>

    <!-- Bootstrap -->
    <link href="~/public/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="~/public/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="~/public/vendors/nprogress/nprogress.css" rel="stylesheet">
    <!-- Animate.css -->
    <link href="~/public/vendors/animate.css/animate.min.css" rel="stylesheet">

    <!-- Custom Theme Style -->
    <link href="~/public/build/css/custom.min.css" rel="stylesheet">
</head>

<body class="login">
    <div>
        <a class="hiddenanchor" id="signup"></a>
        <a class="hiddenanchor" id="signin"></a>
        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    <form asp-controller="account" asp-action="login" method="post" id="frmLogin" asp-validation-summary="ModelOnly">
                        @Html.AntiForgeryToken()
                        <h1>Login Form</h1>
                        <div class="" style="color:red;text-align:center">@ViewData["message"]</div>
                        <div>
                            <input type="text" asp-for="UserName" class="form-control" placeholder="Username" required="" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div>
                            <input type="password" asp-for="PasswordHash" class="form-control" placeholder="Password" required="" />
                            <span asp-validation-for="PasswordHash" class="text-danger"></span>
                        </div>
                        <div>
                            <input type="submit" value="Đăng nhập" name="login">
                            <a class="reset_pass" href="#">Lost your password?</a>
                        </div>

                        <div class="clearfix"></div>

                        <div class="separator">
                            <p class="change_link">
                                New to site?
                                <a href="#signup" class="to_register"> Create Account </a>
                            </p>

                            <div class="clearfix"></div>
                            <br />

                            <div>
                                <h1>Intimex Group</h1>
                                <p>Công ty Cổ phần Tập đoàn Intimex</p>
                            </div>
                        </div>
                    </form>
                </section>
            </div>

            <div id="register" class="animate form registration_form">
                    <section class="login_content">
                        <form method="post" asp-action="SaveAccount" asp-controller="Account">
                            <h1>Create Account</h1>
                            <div>
                                <input type="text" class="form-control" placeholder="Username" asp-for="UserName" required="" />
                            </div>
                            <div>
                                <input type="email" class="form-control" placeholder="Email" asp-for="Email" required="" />
                            </div>
                            <div>
                                <input type="password" class="form-control" placeholder="Password" asp-for="PasswordHash" required="" />
                            </div>
                            <div>
                                <input type="text" class="form-control" placeholder="Full name" asp-for="NormalizedUserName" required="" />
                            </div>
                            <div>
                                <button class="btn btn-default submit" type="submit">Submit</button>
                            </div>

                            <div class="clearfix"></div>

                            <div class="separator">
                                <p class="change_link">
                                    Already a member ?
                                    <a href="#signin" class="to_register"> Log in </a>
                                </p>

                                <div class="clearfix"></div>
                                <br />

                                <div>
                                    <h1>Intimex Group</h1>
                                    <p>Công ty Cổ phần Tập đoàn Intimex</p>
                                </div>
                            </div>
                        </form>
                    </section>
                </div>
        </div>
    </div>
</body>
</html>

