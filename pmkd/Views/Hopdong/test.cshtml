                                        groupItems.AddSimpleFor(m => m.DiaDiemGiaoHang);

                                        groupItems.AddSimpleFor(m => m.IsNoKhoDoi);

                                        

                                        groupItems.AddSimpleFor(m => m.VanChuyen);

