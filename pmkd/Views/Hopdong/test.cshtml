                                        groupItems.AddSimpleFor(m => m.Dichvu);

                                        groupItems.AddSimpleFor(m => m.Tenfull);
                                    });
                            })
                        )
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-9 col-sm-9  offset-md-5">
                        <button type="submit" asp-action="themhopdong" asp-controller="hopdong" class="btn btn-primary" style="margin-top: 30px">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>




