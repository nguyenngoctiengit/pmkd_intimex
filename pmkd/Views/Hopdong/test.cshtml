    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="right_col" role="main" style="height:800px">
    <div class="">
        <div class="col-md-12 col-sm-12">
            <form method="post" asp-action="themhopdong" asp-controller="hopdong">
