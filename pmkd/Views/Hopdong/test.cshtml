                                        groupItems.AddSimpleFor(m => m.Ghichu);

                                        groupItems.AddSimpleFor(m => m.Pakd);

                                        groupItems.AddSimpleFor(m => m.SoPakd);

                                        groupItems.AddSimpleFor(m => m.IsFix);

                                        groupItems.AddSimpleFor(m => m.Tiente);

