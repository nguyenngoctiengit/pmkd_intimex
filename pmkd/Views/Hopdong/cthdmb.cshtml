                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" onclick="show();" name="@Html.NameFor(m => m.MuaBan)" id="inlineRadio3" value="KTRA">
                                            <label class="form-check-label" for="inlineRadio3">Khách trả</label>
