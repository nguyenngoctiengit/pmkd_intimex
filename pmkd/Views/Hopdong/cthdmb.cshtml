@using System.Linq;
@{
    ViewData["Title"] = "cthdmb";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<ViewModelHDMB>
<div class="right_col" role="main" style="height: 500px">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Hợp đồng mua bán</h3>
            </div>
            <div class="title_right">
                <div class="col-md-5 col-sm-5   form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        @{
            if (TempData["alertMessage"] != null)
            {
                <div style="color:red;font-size:30px">
                    @TempData["alertMessage"].ToString()
                </div>
            }
        }
        @{
            if (TempData["alertMessage1"] != null)
            {
                <div style="color:red;font-size:30px">
                    @TempData["alertMessage1"].ToString()
                </div>
            }
        }
        <div class="clearfix"></div>
        <div class="row" style="display: block;">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Hợp đồng mua bán</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="#">Settings 1</a>
                                    <a class="dropdown-item" href="#">Settings 2</a>
                                </div>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box table-responsive">
                                    <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                                        <thead>
                                            <tr>
                                                <th>System ID</th>
                                                <th>Ref</th>
                                                <th>Số HĐ</th>
                                                <th>Mã khách hàng</th>
                                                <th>Khách hàng</th>
                                                <th>Ngày hợp đồng</th>
                                                <th>Tiền tệ</th>
                                                <th>Vận chuyển</th>
                                                <th>INT ký</th>
                                                <th>Khách ký</th>
                                                <th>Thanh toán</th>
                                                <th>Địa điểm giao hàng</th>
                                                <th>Mức ứng</th>
                                                <th>Tạm ứng theo HĐ</th>
                                                <th>Ngày giao hàng</th>
                                                <th>Ngày hiệu lực</th>
                                                <th>Ghi chú</th>
                                                <th>Hình thức KD</th>
                                                <th>Loại hợp đồng</th>
                                                <th>Hình thức gía</th>
                                                <th>Mã đơn vị</th>
                                                <th>Người tạo</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <th>@item.hdmb.Systemref</th>
                                                        <th><a asp-action="cthdmb" asp-controller="hopdong" asp-route-id="@item.hdmb.Systemref">@item.hdmb.Ref</a></th>
                                                        <th>@item.hdmb.Sohd</th>
                                                        <th>@item.hdmb.Makhach</th>
                                                        <th>@item.khachHang.TenKhach</th>
                                                        <th>@item.hdmb.Ngayky</th>
                                                        <th>@item.hdmb.Tiente</th>
                                                        <th>@item.hdmb.VanChuyen</th>
                                                        @{

                                                            string str = item.hdmb.IntKy.Trim();
                                                            int c = str.Length;
                                                            if (c > 1)
                                                            {
                                                                string str1 = str.Substring(str.Length - 1, 1);
                                                                foreach (var a in ViewBag.signer)
                                                                {
                                                                    if (a.MaKhach == item.hdmb.Macn.Trim() && a.Stt.ToString() == str1)
                                                                    {
                                                                        <th>@a.Nguoiky chức vụ @a.Chucvu</th>
                                                                    }

                                                                }
                                                            }
                                                            else
                                                            {
                                                                <th></th>
                                                            }
                                                        }

                                                        @{

                                                            string strKH = item.hdmb.ClientKy.Trim();
                                                            int b = strKH.Length;
                                                            if (b > 0)
                                                            {
                                                                string strKH1 = strKH.Substring(b - 1, 1);
                                                                foreach (var a in ViewBag.signer)
                                                                {
                                                                    if (a.MaKhach == item.hdmb.Makhach && a.Stt.ToString() == strKH1)
                                                                    {
                                                                        <th>@a.Nguoiky chức vụ @a.Chucvu</th>
                                                                    }

                                                                }
                                                            }
                                                            else
                                                            {
                                                                <th></th>
                                                            }



                                                        }
                                                        <th>@item.hdmb.Thanhtoan || @item.portfolioPayment.TenTt</th>
                                                        <th>@item.hdmb.DiaDiemGiaoHang</th>
                                                        <th>@item.portfolioPayment.Mucung</th>
                                                        <th>@item.hdmb.TienUngHd.ToString("N")</th>
                                                        <th>@item.hdmb.Ngaygiao</th>
                                                        <th>@item.hdmb.Ngayhl</th>
                                                        <th>@item.hdmb.Ghichu</th>
                                                        @{
                                                            if (item.hdmb.TypeKd == 1)
                                                            {
                                                                <th>Trực tiếp</th>
                                                            }
                                                            else
                                                            {
                                                                <th>Ủy thác</th>
                                                            }
                                                        }

                                                        <th>@item.hdmb.MuaBan</th>
                                                        @{
                                                            if (item.hdmb.IsFix == true)
                                                            {
                                                                <th>Giá outright</th>
                                                            }
                                                            else
                                                            {
                                                                <th>Giá trừ lùi</th>
                                                            }
                                                        }

                                                        <th>@item.hdmb.Macn</th>
                                                        <th>@item.hdmb.Nguoilam</th>
                                                    </tr>
                                                }
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="col-md-12 col-sm-12  ">
                        <div class="x_panel">
                            <div class="x_title">
                                <h2><i class="fa fa-bars"></i>Chi tiết hàng hóa</h2>
                                <ul class="nav navbar-right panel_toolbox">
                                    <li>
                                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                    </li>
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                            <a class="dropdown-item" href="#">Settings 1</a>
                                            <a class="dropdown-item" href="#">Settings 2</a>
                                        </div>
                                    </li>
                                    <li>
                                        <a class="close-link"><i class="fa fa-close"></i></a>
                                    </li>
                                </ul>
                                <div class="clearfix"></div>
                            </div>
                            <div class="x_content">

                                <ul class="nav nav-tabs bar_tabs" id="myTab" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Chi tiết HĐMB</a>
                                    </li>
                                </ul>
                                <div class="tab-content" id="myTabContent">
                                    <div class="tab-pane fade show active table-responsive" id="home" role="tabpanel" aria-labelledby="home-tab">
                                        <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                                            <thead>
                                                <tr>
                                                    <th border="1" style="border-color:black">SystemRef</th>
                                                    <th border="1" style="border-color:black">Mã hàng</th>
                                                    <th border="1" style="border-color:black">Tên hàng</th>
                                                    <th border="1" style="border-color:black">Số lượng</th>
                                                    <th border="1" style="border-color:black">Trọng lượng</th>
                                                    <th border="1" style="border-color:black">ĐVT</th>
                                                    <th border="1" style="border-color:black">VAT</th>
                                                    <th border="1" style="border-color:black">Giá</th>
                                                    <th border="1" style="border-color:black">Giá tạm tính</th>
                                                    <th border="1" style="border-color:black">Số LOT</th>
                                                    <th border="1" style="border-color:black">Giá tháng</th>
                                                    <th border="1" style="border-color:black">Giá năm</th>
                                                    <th border="1" style="border-color:black">+ / -</th>
                                                    <th border="1" style="border-color:black">Mức trừ</th>
                                                    <th border="1" style="border-color:black">Ngày chốt</th>
                                                    <th border="1" style="border-color:black">Mức stoploss</th>
                                                    <th border="1" style="border-color:black">Mã nhóm</th>
                                                    <th border="1" style="border-color:black">Giá thị trường</th>
                                                    <th border="1" style="border-color:black">Mức thưởng</th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{
                                                    foreach (var item in ViewBag.cthdmb)
                                                    {
                                                        <tr>
                                                            <th scope="col" style="border-color:black">@item.ctHdmb.Systemref</th>
                                                            <th scope="col" style="border-color:black">@item.ctHdmb.Mahang</th>
                                                            <th scope="col" style="border-color:black">@item.hanghoa.Tenhang</th>
                                                            <th scope="col" style="border-color:black">@item.ctHdmb.Soluong</th>
                                                            <th scope="col" style="border-color:black">@item.ctHdmb.Trongluong.ToString("N")</th>
                                                            <th scope="col" style="border-color:black">@item.ctHdmb.Dvt</th>
                                                            <th scope="col" style="border-color:black">@item.ctHdmb.Vat</th>
                                                            <th scope="col" style="border-color:black">@item.ctHdmb.Giact.ToString("N")</th>
                                                            <th scope="col" style="border-color:black">@item.ctHdmb.Giatt.ToString("N")</th>
                                                            <th scope="col" style="border-color:black">@item.ctHdmb.Solot</th>
                                                            <th scope="col" style="border-color:black">@item.ctHdmb.Giathang</th>
                                                            <th scope="col" style="border-color:black">@item.ctHdmb.Gianam</th>
                                                            <th scope="col" style="border-color:black">@item.ctHdmb.Sig</th>
                                                            <th scope="col" style="border-color:black">@item.ctHdmb.Diff</th>
                                                            <th scope="col" style="border-color:black">@item.ctHdmb.FNgayfix</th>
                                                            <th scope="col" style="border-color:black">@item.ctHdmb.Stoploss</th>
                                                            <th scope="col" style="border-color:black">@item.hanghoa.MaNhom</th>
                                                            <th scope="col" style="border-color:black">@item.ctHdmb.Giathitruong</th>
                                                            <th scope="col" style="border-color:black">@item.ctHdmb.Mucthuong</th>
                                                        </tr>
                                                    }
                                                }

                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>


        </div>
    </div>
</div>
