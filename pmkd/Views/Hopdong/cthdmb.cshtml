                                            <input class="form-check-input" type="radio" onfocus="show1();" name="@Html.NameFor(m => m.MuaBan)" id="inlineRadio3" value="CMUON">
                                            <label class="form-check-label" for="inlineRadio3">Cho mượn</label>
                                        </div>
                                        <div class="form-check form-check-inline">
