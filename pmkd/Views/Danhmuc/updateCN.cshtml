@model pmkd.Models.CustomerNorm
@{
    ViewData["Title"] = "updateCN";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Cập nhật hàng hóa</h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5  form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Thêm<small> định mức</small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a class="dropdown-item" href="#">Settings 1</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#">Settings 2</a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        <form method="post" role="form" asp-action="updateCN" asp-controller="Danhmuc">
                            <div class="form-row">

                                <div class="form-group col-md-6">
                                    <label for="inputEmail4">Mã đơn vị</label>
                                    <select asp-for="Macn" class="form-control">
                                        @{
                                            foreach (var a in ViewBag.branch)
                                            {
                                                <option value="@a.Id">@a.Id</option>
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="inputPassword4">Người giao dịch</label>
                                    <input type="text" class="form-control" asp-for="NguoiGd" placeholder="Người giao dịch">
                                    <span asp-validation-for="NguoiGd" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Quan hệ với chủ DN</label>
                                    <input type="text" class="form-control" asp-for="ChucvuNguoigd" placeholder="Quan hệ với chủ doanh nghiệp">
                                </div>
                                <div class="form-group col-md-3">
                                    <label>Nhóm hàng</label>
                                    <select asp-for="Nhomhang" class="form-control">
                                        @{
                                            foreach (var listqg in ViewBag.nhomhang)
                                            {
                                                <option value="@listqg.Manhom">@listqg.Manhom</option>
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="form-group col-md-3">
                                    <label>Định mức HH chưa giao</label>
                                    <input type="number" class="form-control" asp-for="ValueNorm" placeholder="Định mức HH chưa giao">
                                </div>
                            </div>
                            <div>
                                <label>Ghi chú</label>
                                <textarea class="form-control" asp-for="Ghichu" placeholder="Ghi chú"></textarea>
                            </div>
                            <div>
                                <a asp-action="updateCN" asp-controller="Danhmuc"><button type="submit" class="btn btn-primary btn-block" style="margin-top: 30px">Submit</button></a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




