@model pmkd.Models.CustomerNorm
@{
    ViewData["Title"] = "detailKH";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Cập nhật hàng hóa</h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5  form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Thêm<small> định mức</small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a class="dropdown-item" href="#">Settings 1</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#">Settings 2</a>
                                    </li>
                                </ul>

                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        @{
                            if (TempData["alertMessage"] != null)
                            {
                                <div style="color:red;font-size:20px">
                                    @TempData["alertMessage"].ToString()
                                </div>
                            }
                        }
                        @{
                            if (TempData["alertMessage1"] != null)
                            {
                                <div style="color:red;font-size:20px">
                                    @TempData["alertMessage1"].ToString()
                                </div>
                            }
                        }
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />

                        <form class="form-label-left input_mask" method="post" role="form">
                            <div class="form-group row">
                                <label class="col-form-label col-md-2 col-sm-2">Mã đơn vị</label>
                                <div class="col-md-4 col-sm-4">
                                    <select asp-for="Macn" class="form-control">
                                        @{
                                            foreach (var a in ViewBag.branch)
                                            {
                                                <option value="@a.Id">@a.Id</option>
                                            }
                                        }
                                    </select>
                                </div>
                                <label class="col-form-label col-md-2 col-sm-2">Người giao dịch</label>
                                <div class="col-md-4 col-sm-4">
                                    <input type="text" class="form-control" id="inputSuccess2" asp-for="NguoiGd" required>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-form-label col-md-2 col-sm-2">Quan hệ với chủ DN</label>
                                <div class="col-md-4 col-sm-4">
                                    <input type="text" class="form-control" id="inputSuccess2" asp-for="ChucvuNguoigd" required>
                                </div>
                                <label class="col-form-label col-md-2 col-sm-2">Nhóm hàng</label>
                                <div class="col-md-4 col-sm-4">
                                    <select asp-for="Nhomhang" class="form-control">
                                        @{
                                            foreach (var listqg in ViewBag.nhomhang)
                                            {
                                                <option value="@listqg.Manhom">@listqg.Manhom</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-form-label col-md-2 col-sm-2">Định mức HH chưa giao</label>
                                <div class="col-md-4 col-sm-4">
                                    <input type="text" class="form-control" id="inputSuccess2" asp-for="ValueNorm" required>
                                </div>
                                <label class="col-form-label col-md-2 col-sm-2">Ghi chú</label>
                                <div class="col-md-4 col-sm-4">
                                    <textarea type="text" class="form-control" id="inputSuccess2" asp-for="Ghichu" required></textarea>
                                </div>
                            </div>
                            <div class="ln_solid"></div>
                            <div class="form-group row">
                                <div class="col-md-9 col-sm-9  offset-md-5">
                                    <button type="submit" asp-action="themdinhmuc" asp-controller="danhmuc" class="btn btn-primary" style="margin-top: 30px">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




