
@{
    ViewData["Title"] = "themnguoidaidien";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model pmkd.Models.Signer

@{
    if (TempData["alertMessage"] != null)
    {
        <div class="alert alert-success  alert-dismissable">
            @TempData["alertMessage"].ToString()
        </div>
    }
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Cập nhật hàng hóa</h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5  form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Update<small> người đại diện</small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a class="dropdown-item" href="#">Settings 1</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#">Settings 2</a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        <form method="post" class="validate-form" role="form">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="inputEmail4">Khách hàng</label>
                                    <input type="text" class="form-control" readonly asp-for="MaKhach" value="@ViewBag.makhach" placeholder="Mã khách">
                                    <span asp-validation-for="MaKhach" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-3">
                                    <label for="inputPassword4">Người đại diện</label>
                                    <input type="text" class="form-control" asp-for="Nguoiky" placeholder="Người đại diện">
                                    <span asp-validation-for="Nguoiky" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-3">
                                    <label for="inputPassword4">Chức vụ</label>
                                    <input type="text" class="form-control" asp-for="Chucvu" placeholder="chức vụ">
                                    <span asp-validation-for="Chucvu" class="text-danger"></span>
                                </div>
                            </div>
                            <div>
                                <label>Ủy quyền</label>
                                <textarea type="text" class="form-control" asp-for="Uyquyen" placeholder="Ủy quyền"></textarea>
                                <span asp-validation-for="Uyquyen" class="input-validation-error"></span>
                            </div>
                            <div class="ln_solid"></div>
                            <div class="form-group row">
                                <div class="col-md-9 col-sm-9  offset-md-5">
                                    <button type="submit" asp-action="updateSigner" asp-controller="danhmuc"  class="btn btn-primary" style="margin-top: 30px">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






