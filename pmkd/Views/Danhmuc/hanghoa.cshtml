@*@using MultipleModelInOneView;*@
@model IEnumerable<Hanghoa>
@{
    ViewData["Title"] = "hanghoa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    if (TempData["alertMessage"] != null)
    {
        <div class="alert alert-success  alert-dismissable">
            @TempData["alertMessage"].ToString()
        </div>
    }
}

<div class="row">
    <!-- Column -->
    <div class="col-lg-2 col-xlg-3 col-md-5">
        <div class="card">
            <div class="card-body" style="background-color: #FFF8DC">
                <center class="m-t-30">
                    <table class="table table-striped b-t b-light">
                        <thead>
                            <tr>
                                <th>Mã nhóm</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var nhh in ViewBag._nhomhanghoa)
                                {
                                    <tr>
                                        <td><a asp-action="hanghoa" style="color:black" asp-route-id="@nhh.Manhom" asp-controller="danhmuc"><ins>@nhh.Manhom</ins></a></td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                    <div class="container-contact100-form-btn">
                        <a asp-action="themnhomhang" asp-controller="danhmuc">
                            <button class="contact100-form-btn">
                                <span>
                                    Thêm hàng hóa
                                    <i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
                                </span>
                            </button>
                        </a>
                    </div>
                </center>
            </div>
        </div>
    </div>
    <!-- Column -->
    <!-- Column -->
    <div class="col-lg-10 col-xlg-9 col-md-7">
        <div class="card">
            <!-- Tab panes -->
            <div class="card-body">
                <table class="table table-striped b-t b-light">
                    <thead>
                        <tr>
                            <th>ID hàng hóa</th>
                            <th>Mã hàng</th>
                            <th>Tên hàng</th>
                            <th>Thông tin || Edit</th>
                            <th>Xóa</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var item in Model)
                            {
                                <tr>


                                    <td>@item.Idhanghoa</td>
                                    <td>@item.Mahang</td>
                                    <td>@item.Tenhang</td>
                                    <td>
                                        <a asp-action="detailhanghoa" asp-route-id="@item.Idhanghoa" asp-controller="danhmuc">
                                            <i class="fa fa-info" aria-hidden="true"></i>
                                        </a>
                                    </td>
                                    <td>
                                        <a asp-action="deletehanghoa" asp-route-id="@item.Idhanghoa" asp-controller="danhmuc">
                                            <i class="fa fa-trash" aria-hidden="true"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>


                <div class="container-contact100-form-btn">
                    <a asp-action="createhanghoa" asp-controller="danhmuc">
                        <button class="contact100-form-btn">
                            <span>
                                Thêm hàng hóa
                                <i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
                            </span>
                        </button>
                    </a>
                </div>

            </div>
            </div>
        </div>
        <!-- Column -->
    </div>
