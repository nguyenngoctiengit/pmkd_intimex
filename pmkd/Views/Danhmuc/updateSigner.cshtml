                    <label>ID</label>
                    <input type="text" class="form-control" asp-for="Id" placeholder="Ủy quyền">
                    <span asp-validation-for="Id" class="input-validation-error"></span>
                </div>*@
            <div class="form-row">
                <div class="form-group col-md-6">
