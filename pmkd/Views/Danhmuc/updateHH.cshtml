@model pmkd.Models.Hanghoa
@{
    ViewData["Title"] = "updateHH";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    if (TempData["alertMessage"] != null)
    {
        <div class="alert alert-success  alert-dismissable">
            @TempData["alertMessage"].ToString()
        </div>
    }
}
@{
    if (TempData["alertMessage1"] != null)
    {
        <div class="alert alert-success  alert-dismissable">
            @TempData["alertMessage1"].ToString()
        </div>
    }
}
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Cập nhật hàng hóa</h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5  form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Update <small>hàng hóa</small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a class="dropdown-item" href="#">Settings 1</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#">Settings 2</a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        <form id="demo-form2" asp-action="updateHH" asp-controller="danhmuc"  data-parsley-validate class="form-horizontal form-label-left">
                            <div>
                                <label>ID hàng hóa</label>
                                <input type="text" class="form-control" asp-for="Idhanghoa" placeholder="ID hàng hóa">
                                <span class="text-danger" asp-validation-for="Idhanghoa"></span>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-3">
                                    <label for="inputEmail4">Nhóm hàng</label>
                                    <select asp-for="MaNhom" class="form-control">
                                        @{
                                            foreach (var item in ViewBag._nhomhanghoa)
                                            {
                                                if (item.Manhom == ViewBag._hanghoa.MaNhom)
                                                {
                                                    <option selected value="@item.Manhom">@item.Manhom</option>

                                                }
                                                else
                                                {
                                                    <option value="@item.Manhom">@item.Manhom</option>
                                                }
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="form-group col-md-3">
                                    <label for="inputPassword4">Mã hàng</label>
                                    <input type="text" class="form-control" asp-for="Mahang" placeholder="Mã hàng">
                                    <span class="text-danger" asp-validation-for="Mahang"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="inputPassword4">Tên hàng</label>
                                    <input type="text" class="form-control" asp-for="Tenhang" placeholder="Tên hàng">
                                    <span class="text-danger" asp-validation-for="Tenhang"></span>
                                </div>
                            </div>
                            <div>
                                <label>Tên hàng VAT</label>
                                <input type="text" class="form-control" asp-for="Tenhangvat" placeholder="Tên hàng VAT">
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-3">
                                    <label for="inputEmail4">VAT</label>
                                    <div>
                                        <select asp-for="Vat" class="form-control">
                                            <option value="0">0</option>
                                            <option value="5">5</option>
                                            <option value="10">10</option>
                                        </select>
                                    </div>

                                </div>
                                <div class="form-group col-md-6">
                                    <label for="inputPassword4">ĐVT</label>
                                    <div>
                                        <select asp-for="Dvt" class="form-control">
                                            <option value="KGS">KGS</option>
                                            <option value="TAN">TAN</option>
                                            <option value="CAI">CAI</option>
                                        </select>
                                    </div>

                                </div>
                                <div class="form-group col-md-3">
                                    <label for="inputPassword4">Giao dịch</label>
                                    <div>
                                        <select asp-for="Sudung" class="form-control">
                                            <option value="0">0</option>
                                            <option value="1">1</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <label>Bao bì</label>
                                <textarea class="form-control" asp-for="Baobi"></textarea>
                            </div>
                            <div>
                                <label>Kiểm định</label>
                                <textarea class="form-control" asp-for="Kiemdinh"></textarea>
                            </div>
                            <div>
                                <label>Quy cách</label>
                                <textarea class="form-control" asp-for="Quicach"></textarea>
                            </div>
                            <div>
                                <a asp-action="updateHH" asp-controller="danhmuc"><button type="submit" class="btn btn-primary btn-block" style="margin-top: 30px">Submit</button></a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

